    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "rootDir": "./src"
    },
    "include": ["src/**/*", "src/server.ts"],
    "exclude": ["node_modules"]
  }